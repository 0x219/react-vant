{
  "name": "react-vant",
  "version": "0.0.3",
  "description": "React Mobile UI Components base on Vant UI",
  "repository": "https://github.com/3lang3/react-vant.git",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "lib/index.css",
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "bootstrap": "yarn || npm i",
    "start": "zhpfe-cli dev",
    "build": "zhpfe-cli build",
    "release": "zhpfe-cli release --tag dev",
    "docs:build": "zhpfe-cli build-site",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "test": "zhpfe-cli test --coverage",
    "test:coverage": "open tests/coverage/index.html"
  },
  "author": "3lang",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "ui",
    "react",
    "mobile",
    "components"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "zhpfe-cli commit-lint"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx,js,less}": "prettier --write",
    "./src/**/*.{ts,tsx,js}": "eslint --fix",
    "./src/**/*.{css,less}": "stylelint --fix"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@zhpfe/cli": "^1.0.9",
    "@zhpfe/fabric": "^1.0.0",
    "eslint": "^7.30.0",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "typescript": "^4.0.5"
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ],
  "dependencies": {
    "@vant/icons": "^1.6.0",
    "classnames": "^2.2.6",
    "react-transition-group": "^4.4.1"
  }
}
