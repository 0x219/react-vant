{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@zhpfe/design": ["src/index.tsx"],
      "@zhpfe/design/es/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "lib", "es"]
}
